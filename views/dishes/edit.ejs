<!-- Edit a dish -->
<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Dish</h1>
    <div class="col-6 offset-3">
        <form action="/dishes/<%=dish._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data"> 
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="dish[title]" value="<%=dish.title%>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="dish[location]" value="<%=dish.location%>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price of Noodles</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" 
                    aria-describedby="price-label" name="dish[price]" value="<%=dish.price%>" required>
                </div>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
           
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="dish[description]" required><%=dish.description%></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mt-3 mb-3 custom-file">
                <label for="image" class="form-label">Choose Images</label>
                <input class="form-control" type="file" id="image" name="image" multiple>
                <label for="image" class="custom-file-label text-muted"></label>
            </div>

            <!-- delete images -->
            <div class="mb-3">
                <% dish.images.forEach(function (img, i) {  %>

                <img src="<%=img.thumbnail%>" class ="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>"> 
                </div>
                <label for="image-<%=i%>">Delete?</label>
                <% }) %>        
            </div>
        
            <div class="mb-3">
                <button class="btn btn-info">Update Dish</button>
            </div>

        </form>

        <a href="/dishes/<%= dish._id %>">Back to Dish</a>
        
    </body>
    </html>
    </div>
</div>

