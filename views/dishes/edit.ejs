<!-- Edit a dish -->
<% layout('layouts/boilerplate')%>

<div class="row">
    <h1 class="text-center">Edit Dish</h1>
    <div class="col-6 offset-3">
        <form action="/dishes/<%=dish._id%>?_method=PUT" method="POST" novalidate class="validated-form"> 
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="dishes[title]" value="<%=dish.title%>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="dishes[location]" value="<%=dish.location%>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input class="form-control" type="text" id="image" name="dishes[image]" value="<%=dish.image%>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price of Noodles</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" 
                    aria-describedby="price-label" name="dishes[price]" value="<%=dish.price%>" required>
                </div>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
           
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="dishes[description]" required><%=dish.description%></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>


            <div class="mb-3">
                <button class="btn btn-info">Update Dish</button>
            </div>
        </form>

        <a href="/dishes/<%= dish._id %>">Back to Dish</a>
        
    </body>
    </html>
    </div>
</div>

