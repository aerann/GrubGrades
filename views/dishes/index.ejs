<% layout('layouts/boilerplate')%>
    <div id="map" style="width: 100%; height: 500px"></div>
    <h1>All noodle dishes</h1>
    <div>
        <a href="/dishes/new">Add a Dish</a>
    </div>
    <ul>
        <% for (let dish of dishes)  { %> 
            <div class="card" mb-3>
                <div class="row">
                    <div class="col-md-4">
                        <% if(dish.images.length) { %>
                        <img class="img-fluid" alt="" src="<%=dish.images[0].url%>">
                        <% } else { %> 
                            <img src="img-fluid" alt="" 
                                src="https://res.cloudinary.com/dlmyi2vad/image/upload/v1676400507/RamenRater/v5vs1nasy2ac783qyyfq.jpg">
                        <% } %> 
                    </div> 
                    <div class="col-md-8">
                       <div class="card-body">
                            <h5 class="card-title"><%=dish.title%></h5>
                            <p class="card-text"><%= dish.description %></p>
                            <p class="card-text">
                                <small class="text-muted"><%= dish.location %></small>
                            </p>
                            <a class="btn btn-primary" href="/dishes/<%=dish._id%>">View <%= dish.title %></a>
                       </div> 
                    </div>
                </div>
            </div>
        <% } %>

    <script>
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
        const dishes = {features: <%-JSON.stringify(dishes)%>}
    </script>
    
    <script src="/javascripts/clusterMap.js"></script>